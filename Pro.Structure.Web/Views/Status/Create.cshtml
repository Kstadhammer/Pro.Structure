@model StatusViewModel
@{
    ViewData["Title"] = "Create Status";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Create Status</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <h4 class="card-title mb-4">Status Information</h4>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <small class="form-text text-muted">Enter a concise name for the status (e.g., "In
                            Progress")</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text text-muted">Provide a clear description of what this status
                            represents</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="alert alert-info">
                        <h5 class="alert-heading">Status Guidelines</h5>
                        <p class="mb-0">
                        <ul class="mb-0">
                            <li>Use clear, descriptive names</li>
                            <li>Keep descriptions concise but informative</li>
                            <li>Consider how this status fits into your project workflow</li>
                            <li>Ensure the status is distinct from existing ones</li>
                        </ul>
                        </p>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Create Status
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}