@model StatusViewModel
@{
    ViewData["Title"] = $"Status Details - {Model.Name}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Status Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4 class="card-title mb-4">Status Information</h4>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Name)</dt>
                    <dd class="col-sm-8">
                        <span class="status-badge @($"status-{Model.Name.ToLower().Replace(" ", "-")}")">
                            @Model.Name
                        </span>
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Description)</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h4 class="card-title mb-4">Project Information</h4>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ProjectCount)</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.ProjectCount</span> Projects in this status
                    </dd>
                </dl>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h4 class="card-title mb-4">Timeline</h4>
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Created)</dt>
                    <dd class="col-sm-4">@Model.Created.ToString("g")</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Modified)</dt>
                    <dd class="col-sm-4">@Model.Modified.ToString("g")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger"
            onclick="return confirm('Are you sure you want to delete this status?')">
            <i class="bi bi-trash"></i> Delete Status
        </button>
    </form>
</div>