@model ProjectViewModel
@{
    ViewData["Title"] = $"Edit Project - {Model.Name}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Edit Project</h1>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="bi bi-info-circle"></i> Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProjectNumber" />
            <input type="hidden" asp-for="Created" />
            <input type="hidden" asp-for="Modified" />

            <div class="row">
                <div class="col-md-6">
                    <h4 class="card-title mb-4">Basic Information</h4>

                    <div class="mb-3">
                        <label asp-for="ProjectNumber" class="form-label"></label>
                        <input class="form-control" value="@Model.ProjectNumber" disabled />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StatusId" class="form-label"></label>
                        <select asp-for="StatusId" class="form-select"
                            asp-items="@(ViewBag.Statuses != null ? new SelectList(ViewBag.Statuses, "Id", "Name") : new SelectList(new List<StatusModel>(), "Id", "Name"))">
                            <option value="">-- Select Status --</option>
                        </select>
                        <span asp-validation-for="StatusId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <h4 class="card-title mb-4">Financial Information</h4>

                    <div class="mb-3">
                        <label asp-for="HourlyRate" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TotalPrice" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="TotalPrice" class="text-danger"></span>
                    </div>

                    <h4 class="card-title mb-4 mt-4">Team Information</h4>

                    <div class="mb-3">
                        <label asp-for="CustomerId" class="form-label"></label>
                        <select asp-for="CustomerId" class="form-select"
                            asp-items="@(ViewBag.Customers != null ? new SelectList(ViewBag.Customers, "Id", "Name") : new SelectList(new List<CustomerModel>(), "Id", "Name"))">
                            <option value="">-- Select Customer --</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProjectManagerId" class="form-label"></label>
                        <select asp-for="ProjectManagerId" class="form-select"
                            asp-items="@(ViewBag.ProjectManagers != null ? new SelectList(ViewBag.ProjectManagers, "Id", "FullName") : new SelectList(new List<ProjectManagerModel>(), "Id", "FullName"))">
                            <option value="">-- Select Project Manager --</option>
                        </select>
                        <span asp-validation-for="ProjectManagerId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}