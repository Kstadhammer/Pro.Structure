@model ProjectViewModel
@{
    ViewData["Title"] = $"Project Details - {Model.Name}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Project Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4 class="card-title mb-4">Basic Information</h4>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ProjectNumber)</dt>
                    <dd class="col-sm-8">@Model.ProjectNumber</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Name)</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.StartDate)</dt>
                    <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.EndDate)</dt>
                    <dd class="col-sm-8">@Model.EndDate.ToShortDateString()</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.StatusName)</dt>
                    <dd class="col-sm-8">
                        <span class="status-badge @($"status-{Model.StatusName.ToLower().Replace(" ", "-")}")">
                            @Model.StatusName
                        </span>
                    </dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h4 class="card-title mb-4">Financial Information</h4>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.HourlyRate)</dt>
                    <dd class="col-sm-8">@Model.HourlyRate.ToString("C")</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TotalPrice)</dt>
                    <dd class="col-sm-8">@Model.TotalPrice.ToString("C")</dd>
                </dl>

                <h4 class="card-title mb-4 mt-4">Team Information</h4>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.CustomerName)</dt>
                    <dd class="col-sm-8">@Model.CustomerName</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ProjectManagerName)</dt>
                    <dd class="col-sm-8">@Model.ProjectManagerName</dd>
                </dl>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h4 class="card-title mb-4">Timeline</h4>
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Created)</dt>
                    <dd class="col-sm-4">@Model.Created.ToString("g")</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Modified)</dt>
                    <dd class="col-sm-4">@Model.Modified.ToString("g")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this project?')">
            <i class="bi bi-trash"></i> Delete Project
        </button>
    </form>
</div> 